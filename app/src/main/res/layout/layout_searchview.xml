<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.SearchView
        android:id="@+id/searchView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_50"
        android:background="@drawable/bg_search_rounded"
        app:iconifiedByDefault="false"
        app:queryBackground="@drawable/bg_search_rounded"
        app:queryHint="@string/search_hint"
        app:searchIcon="@drawable/ic_search"
        app:submitBackground="@drawable/bg_search_rounded"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <Button
        android:id="@+id/btnSearchReset"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/space_32"
        android:layout_margin="@dimen/space_tiny"
        android:background="@drawable/button_teal"
        android:foreground="?attr/selectableItemBackground"
        android:text="@string/search_reset_text"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>